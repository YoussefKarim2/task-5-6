#include <iostream>
#include <random>
using namespace std;

int main()
{
    random_device rd;
    mt19937 gen(rd());

    uniform_int_distribution<int> coinDist(1, 3);
    uniform_int_distribution<int> weightDist(0, 1);

    int fakeCoin = coinDist(gen);
    bool isHeavier = weightDist(gen);

    int A = 10;
    int B = 10;
    int C = 10;

    if (fakeCoin == 1)
    {
        if (isHeavier)
            A = 11;
        else
            A = 9;
    }

    if (fakeCoin == 2)
    {
        if (isHeavier)
            B = 11;
        else
            B = 9;
    }

    if (fakeCoin == 3)
    {
        if (isHeavier)
            C = 11;
        else
            C = 9;
    }

    cout << "First Weighing: A vs B\n";

    if (A == B)
    {
        cout << "Second Weighing: A vs C\n";

        if (C > A)
            cout << "Fake coin is HEAVIER\n";
        else
            cout << "Fake coin is LIGHTER\n";
    }
    else
    {
        cout << "Second Weighing: A vs C\n";

        if (A == C)
        {
            if (B > A)
                cout << "Fake coin is HEAVIER\n";
            else
                cout << "Fake coin is LIGHTER\n";
        }
        else
        {
            if (A > C)
                cout << "Fake coin is HEAVIER\n";
            else
                cout << "Fake coin is LIGHTER\n";
        }
    }

    cout << "\nActual fake coin: ";

    if (fakeCoin == 1)
        cout << "A\n";

    if (fakeCoin == 2)
        cout << "B\n";

    if (fakeCoin == 3)
        cout << "C\n";

    cout << "Actual type: ";

    if (isHeavier)
        cout << "HEAVIER\n";
    else
        cout << "LIGHTER\n";

    return 0;
}
