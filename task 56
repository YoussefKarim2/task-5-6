#include <iostream>
#include <random>
using namespace std;

int main() {
    int n;
    cout << "Enter number of coins (n > 2): ";
    cin >> n;

    if (n <= 2) {
        cout << "Number of coins must be greater than 2\n";
        return 0;
    }

    random_device rd;
    mt19937 gen(rd());

    uniform_int_distribution<int> coinDist(0, n - 1);
    uniform_int_distribution<int> weightDist(0, 1);

    int fakeIndex = coinDist(gen);
    bool isHeavier = weightDist(gen);

    int* coins = new int[n];

    for (int i = 0; i < n; i++)
        coins[i] = 10;

    if (isHeavier)
        coins[fakeIndex] = 11;
    else
        coins[fakeIndex] = 9;

    int realFake = -1;

    for (int i = 0; i < n; i++) {
        if (coins[i] != coins[0]) {
            realFake = i;
            break;
        }
    }

    if (realFake == -1) {
        realFake = fakeIndex;
    }

    cout << "\nFake coin found at index: " << realFake << endl;

    if (coins[realFake] > coins[0])
        cout << "Fake coin is HEAVIER\n";
    else
        cout << "Fake coin is LIGHTER\n";

    cout << "\nActual fake coin index: " << fakeIndex << endl;

    cout << "Actual type: ";
    if (isHeavier)
        cout << "HEAVIER\n";
    else
        cout << "LIGHTER\n";

    delete[] coins;

    return 0;
}
